<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AWGP Seva Portal</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="custom.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" class="rounded-circle" href="/images/logo.jpg">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        * {
            font-family: "Roboto", sans-serif;
        }

        .navbar {
            background-color: #0000ff;
            /* Dark Blue */
        }

        .navbar-brand img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .event-status {
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .approved {
            background-color: #28a745;
            color: white;
        }

        .pending {
            background-color: #ffc107;
            color: black;
        }

        .rejected {
            background-color: #dc3545;
            color: white;
        }

        .card-custom {
            border-radius: 10px;
            box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
        }

        .welcome {
            border-bottom: 2px solid rgb(35, 1, 255);
            /* Thickness & color of underline */
            padding-bottom: 5px;
            width: fit-content;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark px-3">
        <a class="navbar-brand" href="#">
            <img src="/images/logo.jpg" alt="Logo">
            AWGP Seva Portal
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link text-white" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#">About</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#">Contact</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#">Help</a></li>
                <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-bell"></i></a></li>
                <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-user-circle"></i></a></li>
            </ul>
        </div>
    </nav>

    <!-- Buttons -->
    <div class="container mt-3">
        <div class="d-flex justify-content-between align-items-center">
            <button class="btn btn-outline-danger">
                <i class="fas fa-map-marker-alt"></i> Location
            </button>
            <a href="/api/v1/user-dashboard/add-event"><button class="btn btn-primary">+ New Event</button></a>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h5 class="welcome">Your previous events status</h5>
            <select class="form-select w-auto">
                <option selected>Current Events</option>
                <option value="past">Past Events</option>
            </select>
        </div>

        <!-- Table for Desktop View -->
        <div class="d-none d-md-block">
            <table class="table table-bordered mt-3">
                <thead class="text-white" style="background-color: blue;">
                    <tr>
                        <th>Event Details</th>
                        <th>Date / Time</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <!-- Check if events is undefined, null, or an empty array -->
                <% if (typeof events==="undefined" || !events || events.length===0) { %>
                    <tbody>
                        <div class="alert alert-warning text-center mt-3">
                            <strong>No events yet.</strong>
                        </div>
                    </tbody>
                    <% } else { %>

                        <!-- Table for Desktop View -->
                        <div class="d-none d-md-block">
                            <table class="table table-bordered mt-3">
                                <thead class="text-white" style="background-color: blue;">
                                    <tr>
                                        <th>Event Details</th>
                                        <th>Date / Time</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% events.forEach(event=> { %>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <%= user.name %>
                                                </strong>, <br>
                                                Event: <%= event.eventType %>, <br>
                                                    Address: <%= user.address %>, <%= user.state %> <br>
                                                            Pin: <%= user.pinCode %> <br>
                                                                M.no: <%= user.phone %>
                                            </td>
                                            <td>
                                                Date: <%= event.requested_date %>, <br>
                                                    Time: <%= event.requested_time %>
                                            </td>
                                            <td>
                                                <span class="event-status <%= event.status.toLowerCase() %>">
                                                    <%= event.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <button class="btn btn-success">Update</button>
                                                <button class="btn btn-danger">Cancel</button>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Card for Mobile View -->
                        <div class="d-md-none">
                            <% events.forEach(event=> { %>
                                <div class="card card-custom mt-3">
                                    <h5 class="text-center bg-primary text-white p-2">Details</h5>
                                    <p><strong>
                                            <%= user.name %>
                                        </strong></p>
                                    <p>Event: <%= event.eventType %>
                                    </p>
                                    <p>Address: <%= user.address %>, <%= user.state %>
                                    </p>
                                    <p>Pin: <%= user.pinCode %>
                                    </p>
                                    <p>M.no: <%= user.phone %>
                                    </p>
                                    <p>Date: <%= event.requested_date %>
                                    </p>
                                    <p>Time: <%= event.requested_time %>
                                    </p>
                                    <p>Status: <span class="event-status <%= event.status.toLowerCase() %>">
                                            <%= event.status %>
                                        </span></p>
                                    <div class="d-flex justify-content-between">
                                        <button class="btn btn-success w-50">Update</button>
                                        <button class="btn btn-danger w-50">Cancel</button>
                                    </div>
                                </div>
                                <% }); %>
                        </div>

                        <% } %> <!-- End of if-else condition -->

        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>